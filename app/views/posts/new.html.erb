<%= render "shared/header" %>
 <h3>スケジュール新規登録</h3>

 <%= render "shared/error", obj: @post %>
 
 <%= form_with model: @post do |f| %>
   <table>
     <tr>
       <th><%= f.label :title ,"タイトル" %></th>
       <td><%= f.text_field :title %></td>
     </tr>
 
     <tr>
       <th><%= f.label :stday ,"開始日" %></th>
       <td><%= f.datetime_field :stday %></td>
     </tr>
 
     <tr>
       <th><%= f.label :endday ,"終了日" %></th>
       <td><%= f.datetime_field :endday %></td>
     </tr>
 
     <tr>
       <th><%= f.label :shujitsu ,"終日" %></th>
       <td><%= f.check_box :shujitsu, {} , "○","" %></td>
     </tr>

     <tr>
       <th><%= f.label :memo ,"スケジュールメモ" %></th>
       <td><%= f.text_area :memo %></td>
     </tr>
   </table>
 
   <div>
     <ul>
       <li><%= f.submit "スケジュールを新規登録する"%></li>
       <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
     </ul>
   </div>
 <% end %>

<%= render "shared/footer" %>